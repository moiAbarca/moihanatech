<style>
  .page-hero {
    padding: 10rem 0 6rem;
    text-align: center;
    background: 
      radial-gradient(circle at 50% 0%, rgba(99, 102, 241, 0.15) 0%, transparent 50%);
  }

  .page-hero h1 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    margin-bottom: 1rem;
  }

  .page-hero p {
    font-size: 1.2rem;
    color: var(--color-text-muted);
    max-width: 600px;
    margin: 0 auto;
  }

  /* Service Detail Sections */
  .service-detail {
    padding: 6rem 0;
  }

  .service-detail.alt {
    background: var(--color-bg-light);
  }

  .service-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .service-content.reverse {
    direction: rtl;
  }

  .service-content.reverse > * {
    direction: ltr;
  }

  .service-badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: rgba(99, 102, 241, 0.1);
    color: var(--color-primary);
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .service-text h2 {
    font-size: clamp(2rem, 4vw, 2.5rem);
    margin-bottom: 1.5rem;
  }

  .service-description {
    font-size: 1.1rem;
    color: var(--color-text-muted);
    line-height: 1.8;
    margin-bottom: 2rem;
  }

  .service-features h3,
  .benefits h4,
  .tech-stack h4 {
    font-size: 1.2rem;
    margin-bottom: 1rem;
  }

  .service-features ul {
    list-style: none;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 0.75rem;
  }

  .service-features li {
    color: var(--color-text-muted);
    font-size: 1.05rem;
  }

  .tech-stack {
    margin-top: 2rem;
  }

  .tech-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .tech-tag {
    padding: 0.5rem 1rem;
    background: var(--color-bg-lighter);
    border-radius: 6px;
    font-size: 0.9rem;
    color: var(--color-text-muted);
  }

  .benefits {
    margin-top: 2rem;
  }

  .benefit-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  .benefit {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem;
    background: var(--color-bg-lighter);
    border-radius: 8px;
  }

  .benefit-icon {
    font-size: 1.5rem;
  }

  /* Visual Elements */
  .service-visual {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .visual-card {
    width: 100%;
    max-width: 500px;
    background: var(--color-bg-light);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  }

  .browser-bar {
    background: var(--color-bg-lighter);
    padding: 0.75rem;
    display: flex;
    gap: 0.5rem;
  }

  .browser-bar span {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: var(--color-text-muted);
  }

  .visual-content {
    height: 300px;
    background: 
      linear-gradient(to bottom, var(--color-bg-lighter) 20%, transparent 20%),
      linear-gradient(to bottom, var(--color-bg-lighter) 40%, transparent 40%),
      linear-gradient(to bottom, var(--color-bg-lighter) 60%, transparent 60%);
    background-size: 100% 50px;
    background-position: 0 20px, 0 80px, 0 140px;
    animation: shimmer 2s infinite;
  }

  @keyframes shimmer {
    0%, 100% { opacity: 0.5; }
    50% { opacity: 1; }
  }

  .automation-visual {
    position: relative;
    width: 100%;
    height: 400px;
  }

  .node {
    position: absolute;
    width: 80px;
    height: 80px;
    background: var(--gradient-primary);
    border-radius: 16px;
    box-shadow: 0 10px 30px rgba(99, 102, 241, 0.3);
    animation: pulse 3s ease-in-out infinite;
  }

  .node-1 {
    top: 20%;
    left: 20%;
    animation-delay: 0s;
  }

  .node-2 {
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    animation-delay: 1s;
  }

  .node-3 {
    bottom: 20%;
    right: 20%;
    animation-delay: 2s;
  }

  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
      box-shadow: 0 10px 30px rgba(99, 102, 241, 0.3);
    }
    50% {
      transform: scale(1.05);
      box-shadow: 0 15px 40px rgba(99, 102, 241, 0.5);
    }
  }

  .connection {
    position: absolute;
    height: 2px;
    background: var(--gradient-secondary);
    animation: flow 2s ease-in-out infinite;
  }

  .con-1 {
    width: 150px;
    top: 30%;
    left: 25%;
    transform: rotate(20deg);
  }

  .con-2 {
    width: 180px;
    top: 60%;
    left: 45%;
    transform: rotate(-20deg);
  }

  @keyframes flow {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 1; }
  }

  .app-visual {
    width: 100%;
    max-width: 500px;
  }

  .app-window {
    background: var(--color-bg-light);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    display: flex;
    height: 400px;
  }

  .app-sidebar {
    width: 80px;
    background: var(--color-bg-lighter);
  }

  .app-main {
    flex: 1;
    padding: 1.5rem;
  }

  .app-header {
    height: 40px;
    background: var(--color-bg-lighter);
    border-radius: 8px;
    margin-bottom: 1rem;
  }

  .app-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  .app-card {
    height: 140px;
    background: var(--color-bg-lighter);
    border-radius: 8px;
  }

  .mobile-visual {
    display: flex;
    justify-content: center;
  }

  .phone-frame {
    width: 280px;
    height: 560px;
    background: var(--color-bg-lighter);
    border-radius: 40px;
    padding: 12px;
    box-shadow: 0 30px 80px rgba(0, 0, 0, 0.4);
  }

  .phone-notch {
    width: 120px;
    height: 25px;
    background: var(--color-bg);
    border-radius: 0 0 20px 20px;
    margin: 0 auto 8px;
  }

  .phone-screen {
    width: 100%;
    height: calc(100% - 33px);
    background: var(--color-bg);
    border-radius: 28px;
    overflow: hidden;
  }

  .mobile-header {
    height: 60px;
    background: var(--gradient-primary);
  }

  .mobile-content {
    padding: 1rem;
  }

  /* Process Section */
  .process-section {
    background: var(--color-bg-light);
  }

  .process-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .process-step {
    text-align: center;
    padding: 2rem;
  }

  .step-number {
    width: 60px;
    height: 60px;
    margin: 0 auto 1.5rem;
    background: var(--gradient-primary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
  }

  .process-step h3 {
    margin-bottom: 1rem;
  }

  .process-step p {
    color: var(--color-text-muted);
  }

  /* CTA Section */
  .cta-section {
    background: var(--color-bg);
  }

  .cta-box {
    text-align: center;
    padding: 4rem 2rem;
    background: var(--gradient-primary);
    border-radius: 24px;
    box-shadow: 0 20px 60px rgba(99, 102, 241, 0.3);
  }

  .cta-box h2 {
    font-size: clamp(2rem, 4vw, 3rem);
    color: white;
    margin-bottom: 1rem;
  }

  .cta-box p {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 2rem;
  }

  .btn {
    padding: 1rem 2rem;
    border-radius: 10px;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    display: inline-block;
  }

  .btn-large {
    padding: 1.25rem 3rem;
    font-size: 1.2rem;
    background: white;
    color: var(--color-primary);
    font-weight: 700;
  }

  .btn-large:hover {
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  /* Responsive */
  @media (max-width: 968px) {
    .service-content {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .service-content.reverse {
      direction: ltr;
    }

    .mobile-visual, .automation-visual {
      height: 300px;
    }

    .phone-frame {
      transform: scale(0.8);
    }
  }

  @media (max-width: 768px) {
    .page-hero {
      padding: 8rem 0 4rem;
    }

    .service-features ul {
      grid-template-columns: 1fr;
    }

    .benefit-grid {
      grid-template-columns: 1fr;
    }

    .process-grid {
      grid-template-columns: 1fr;
    }
  }
</style>