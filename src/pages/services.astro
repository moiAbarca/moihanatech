<style>
  .page-hero {
    padding: 10rem 0 0rem;
    text-align: center;
    background: 
      radial-gradient(circle at 50% 0%, rgba(99, 102, 241, 0.15) 0%, transparent 50%);
  }

  .page-hero h1 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    margin-bottom: 1rem;
  }

  .page-hero p {
    font-size: 1.2rem;
    color: var(--color-text-muted);
    max-width: 600px;
    margin: 0 auto;
  }

  /* Service Detail Sections */
  .service-detail {
    padding: 4rem 0;
  }

  .service-detail.alt {
    background: var(--color-bg-light);
  }

  .service-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .service-content.reverse {
    direction: rtl;
  }

  .service-content.reverse > * {
    direction: ltr;
  }

  .service-badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: rgba(99, 102, 241, 0.1);
    color: var(--color-primary);
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .service-text h2 {
    font-size: clamp(2rem, 4vw, 2.5rem);
    margin-bottom: 1.5rem;
  }

  .service-description {
    font-size: 1.1rem;
    color: var(--color-text-muted);
    line-height: 1.8;
    margin-bottom: 2rem;
  }

  .service-features h3,
  .benefits h4,
  .tech-stack h4 {
    font-size: 1.2rem;
    margin-bottom: 1rem;
  }

  .service-features ul {
    list-style: none;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 0.75rem;
  }

  .service-features li {
    color: var(--color-text-muted);
    font-size: 1.05rem;
  }

  .tech-stack {
    margin-top: 2rem;
  }

  .tech-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .tech-tag {
    padding: 0.5rem 1rem;
    background: var(--color-bg-lighter);
    border-radius: 6px;
    font-size: 0.9rem;
    color: var(--color-text-muted);
  }

  .benefits {
    margin-top: 2rem;
  }

  .benefit-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  .benefit {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem;
    background: var(--color-bg-lighter);
    border-radius: 8px;
  }

  .benefit-icon {
    font-size: 1.5rem;
  }

  /* Lottie Animation Container */
  .service-visual {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .lottie-container {
    width: 100%;
    max-width: 500px;
    height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-bg-light);
    border-radius: 20px;
    padding: 2rem;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  }

  /* Process Section */
  .process-section {
    background: var(--color-bg-light);
    align-items: center;
    align-self: center;
    align-content: center;
    alignment-baseline: central;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-header h2 {
    font-size: clamp(2rem, 4vw, 3rem);
    margin-bottom: 1rem;
  }

  .section-header p {
    font-size: 1.2rem;
    color: var(--color-text-muted);
  }

  .process-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    align-items: center;
    justify-items: center;
    align-self: center;
    align-content: center;
    alignment-baseline: central;
  }

  .process-step {
    text-align: center;
    padding: 2rem;
  }

  .step-number {
    width: 60px;
    height: 60px;
    margin: 0 auto 1.5rem;
    background: var(--gradient-primary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
  }

  .process-step h3 {
    margin-bottom: 1rem;
  }

  .process-step p {
    color: var(--color-text-muted);
  }

  /* CTA Section */
  .cta-section {
    background: var(--color-bg);
  }

  .cta-box {
    text-align: center;
    padding: 4rem 2rem;
    background: var(--gradient-primary);
    border-radius: 24px;
    box-shadow: 0 20px 60px rgba(99, 102, 241, 0.3);
  }

  .cta-box h2 {
    font-size: clamp(2rem, 4vw, 3rem);
    color: white;
    margin-bottom: 1rem;
  }

  .cta-box p {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 2rem;
  }

  .btn {
    padding: 1rem 2rem;
    border-radius: 10px;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    display: inline-block;
  }

  .btn-large {
    padding: 1.25rem 3rem;
    font-size: 1.2rem;
    background: white;
    color: var(--color-primary);
    font-weight: 700;
  }

  .btn-large:hover {
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  /* Responsive */
  @media (max-width: 968px) {
    .service-content {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .service-content.reverse {
      direction: ltr;
    }

    .service-visual {
      order: 2;
    }

    .service-text {
      order: 1;
    }

    .lottie-container {
      height: 350px;
    }
  }

  @media (max-width: 768px) {
    .page-hero {
      padding: 8rem 0 4rem;
    }

    .service-features ul {
      grid-template-columns: 1fr;
    }

    .benefit-grid {
      grid-template-columns: 1fr;
    }

    .process-grid {
      grid-template-columns: 1fr;
    }

    .lottie-container {
      height: 300px;
    }
  }
</style>

<script>
  // Import Lottie
  import lottie from 'lottie-web';

  // Load animations when page loads
  document.addEventListener('DOMContentLoaded', () => {
    // Web Development Animation
    const webDevContainer = document.getElementById('webDevAnimation');
    if (webDevContainer) {
      lottie.loadAnimation({
        container: webDevContainer,
        renderer: 'svg',
        loop: true,
        autoplay: true,
        path: '/animations/web-dev.json' // Your animation file
      });
    }

    // Automation Animation
    const automationContainer = document.getElementById('automationAnimation');
    if (automationContainer) {
      lottie.loadAnimation({
        container: automationContainer,
        renderer: 'svg',
        loop: true,
        autoplay: true,
        path: '/animations/automation.json'
      });
    }

    // Web App Animation
    const webAppContainer = document.getElementById('webAppAnimation');
    if (webAppContainer) {
      lottie.loadAnimation({
        container: webAppContainer,
        renderer: 'svg',
        loop: true,
        autoplay: true,
        path: '/animations/web-app.json'
      });
    }

    // Mobile App Animation
    const mobileAppContainer = document.getElementById('mobileAppAnimation');
    if (mobileAppContainer) {
      lottie.loadAnimation({
        container: mobileAppContainer,
        renderer: 'svg',
        loop: true,
        autoplay: true,
        path: '/animations/mobile-app.json'
      });
    }
  });
</script>