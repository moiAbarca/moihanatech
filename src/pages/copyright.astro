<style>
  .page-hero {
    padding: 10rem 0 4rem;
    text-align: center;
    background: 
      radial-gradient(circle at 50% 0%, rgba(99, 102, 241, 0.15) 0%, transparent 50%);
  }

  .page-hero h1 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    margin-bottom: 1rem;
  }

  .page-hero p {
    font-size: 1rem;
    color: var(--color-text-muted);
  }

  .legal-content {
    padding: 4rem 0;
  }

  .content-wrapper {
    max-width: 900px;
    margin: 0 auto;
  }

  .legal-section {
    margin-bottom: 3rem;
  }

  .legal-section h2 {
    font-size: 1.75rem;
    color: var(--color-text);
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid rgba(99, 102, 241, 0.2);
  }

  .legal-section p {
    font-size: 1.05rem;
    line-height: 1.8;
    color: var(--color-text-muted);
    margin-bottom: 1rem;
  }

  .legal-section ul {
    margin: 1rem 0 1.5rem 1.5rem;
    list-style-type: disc;
  }

  .legal-section li {
    font-size: 1.05rem;
    line-height: 1.8;
    color: var(--color-text-muted);
    margin-bottom: 0.5rem;
  }

  .legal-section a {
    color: var(--color-primary);
    text-decoration: underline;
    transition: color 0.3s ease;
  }

  .legal-section a:hover {
    color: var(--color-secondary);
  }

  .contact-box {
    background: var(--color-bg-light);
    padding: 2rem;
    border-radius: 12px;
    margin-top: 1.5rem;
  }

  .contact-box p {
    margin-bottom: 0.5rem;
  }

  @media (max-width: 768px) {
    .page-hero {
      padding: 8rem 0 3rem;
    }

    .legal-content {
      padding: 3rem 0;
    }

    .legal-section h2 {
      font-size: 1.5rem;
    }
  }
</style>